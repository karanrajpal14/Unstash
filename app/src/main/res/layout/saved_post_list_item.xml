<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saved_post_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/post_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/author_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/created_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/post_title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/created_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/author_text_view"
        app:layout_constraintRight_toLeftOf="@+id/subreddit_name_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/author_text_view"
        app:layout_constraintTop_toTopOf="@+id/author_text_view"/>

    <TextView
        android:id="@+id/subreddit_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/created_time_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/created_time_text_view"
        app:layout_constraintTop_toTopOf="@+id/created_time_text_view"/>

</android.support.constraint.ConstraintLayout>